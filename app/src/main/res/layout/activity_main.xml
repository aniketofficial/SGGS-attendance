<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get OTP"
        android:id="@+id/get_otp_button"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:visibility="invisible"
        android:layout_below="@+id/email"
        android:layout_marginTop="7dp"
        android:layout_centerHorizontal="true" />
    <EditText

        android:layout_width="match_parent"
        android:visibility="invisible"
        android:hint="Enter OTP here"
        android:id="@+id/OTP"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/password"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:id="@+id/result"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="GET Attendance"
        android:layout_below="@+id/OTP"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:visibility="visible"
        android:id="@+id/email"
        android:hint="E-mail ID"
        android:layout_marginTop="78dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"
        android:id="@+id/password"
        android:visibility="visible"
        android:layout_above="@+id/password_enabler"
        android:layout_below="@+id/email"
        android:layout_alignRight="@+id/email"
        android:layout_alignEnd="@+id/email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Having Password? Click here."
        android:visibility="invisible"
        android:id="@+id/password_enabler"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/get_otp_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET Attendance"
        android:visibility="visible"
        android:paddingLeft="12dp"
        android:layout_marginRight="12dp"
        android:id="@+id/otp_generator2"
        android:layout_alignTop="@+id/password_enabler"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Don't have Password? click here."
        android:id="@+id/dhp"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:visibility="visible"
        android:layout_below="@+id/result"
        android:layout_marginTop="20dp" />


</RelativeLayout>
